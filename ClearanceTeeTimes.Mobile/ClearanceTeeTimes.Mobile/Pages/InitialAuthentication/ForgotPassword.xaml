<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearanceTeeTimes.Mobile.Pages.InitialAuthentication.ForgotPassword" 
             Title="Forgot Password" BackgroundColor="#F2F2F2">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="StartAndExpand">
      <Label Text="Email Address" />
      <Entry x:Name="emailEntryBox" />
      <Button Text="Continue" BackgroundColor="#051A26"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>